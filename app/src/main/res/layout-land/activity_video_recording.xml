<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" /-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playButton"
        android:id="@+id/playVideo"
        android:width="180dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/uploadVideo"
        android:layout_toStartOf="@+id/uploadVideo"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recordVideo"
        android:id="@+id/recordVideo"
        android:layout_alignTop="@+id/playVideo"
        android:layout_toRightOf="@+id/uploadVideo"
        android:layout_toEndOf="@+id/uploadVideo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uploadVideoButton"
        android:id="@+id/uploadVideo"
        android:layout_below="@+id/playVideo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />
</RelativeLayout>