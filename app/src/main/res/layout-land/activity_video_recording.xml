<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_record_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".VideoRecordingActivity"
    android:clickable="true">

    <ImageView
        android:layout_width="250dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/videoPreview"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uploadVideoButton"
        android:id="@+id/uploadVideo"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_below="@+id/videoPreview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playButton"
        android:id="@+id/playVideo"
        android:width="180dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@+id/videoPreview"
        android:layout_alignRight="@+id/videoPreview"
        android:layout_alignEnd="@+id/videoPreview"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recordVideo"
        android:id="@+id/recordVideo"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/uploadVideo"
        android:layout_alignEnd="@+id/uploadVideo"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openVideo"
        android:id="@+id/openVideo"
        android:layout_below="@+id/recordVideo"
        android:layout_alignLeft="@+id/uploadVideo"
        android:layout_alignStart="@+id/uploadVideo" />

</RelativeLayout>